.h-header__top
  display flex
  justify-content space-between
  align-items center
  padding 16px
  border-bottom 1px solid #F9A422
.h-header__logo
  margin-right 30px
  .icon
    size(188px,88px)
.h-header__top_left
  display flex
  align-items center
.h-header__title
  display flex
  flex-direction column
  font-size 17px
  font-family 'Nunito 500',sans-serif
  color color333333
.h-header__top_right
  display flex
  align-items center
.c-contact-info
  display flex
  flex-direction column
  align-items end
  margin-right 24px
.c-contact-info__phone
  font-family 'Nunito 900',sans-serif
  font-size 21px
  color color333333
.c-contact-info__email
  font-family 'Nunito 700',sans-serif
  font-size 17px
.h-header__button-call
  display flex
  justify-content center
  align-items center
  width 100%
  min-width 218px
  height 56px
  font-family 'Nunito 800',sans-serif
  font-size 17px
  background-color #EE2F2E
  color #fff
  border-radius 56px
  cursor pointer
.h-header__list
  display flex
  align-items center
  justify-content center
.h-header__item
  display flex
  flex-direction column
  position relative
  font-family 'Nunito 700',sans-serif
  font-size 16px
  margin-right 35px
  text-transform uppercase
  cursor pointer
  z-index 2
  .icon
    size(24px)
  &:last-child
    margin-right 0

.h-header__menu
  padding 28px 0
.h-header__depth1_submenu
  display none
  position absolute
  left 0
  top 53px
  width max-content
  background-color #fff
  z-index 1
  border-radius 0 0 14px 14px
.s-submenu__list
  display flex
  flex-direction column
  box-shadow 0px 20px 25px 0px rgba(18,75,155,0.13)
  border-radius: 0 0  14px 14px;
.s-submenu__item
  font-family 'Nunito 600',sans-serif
  font-size 17px
  padding 16px 32px
  text-transform none
  border-bottom 1px solid #b1c3cb
  &:last-child
    border none

// Секция Наши услуги
.s-services__title
  text-align center
  font-size 36px
  font-family 'Nunito-Sans 900',sans-serif
  text-transform uppercase
  margin-bottom 20px
  span
    margin-left 15px
    color #F9A422

.s-services__item
  display flex
  flex-direction column
  border-radius 0 0 16px 16px
  background-color #fff
.s-services__item.active
  .icon
    opacity 0
  .s-services__item_title span
    border-bottom 1px solid #F9A422
.s-services__item_depth
  display flex
  align-items center
  justify-content center
  flex-direction column
  background-color #fff
  border-radius 0 0 16px 16px
  box-shadow: 0px 4px 25px 0px #124B9B33
.s-services__item_title
  display flex
  flex-direction column
  justify-content center
  align-items center
  text-align center
  font-family "Nunito 800", sans-serif
  font-size 18px
  text-transform uppercase
  padding: 20px 25px 15px 25px;
  transition ease .2s
  .icon
    size(24px)
    transition ease .2s
  span
    border-bottom 1px solid transparent
.s-services__steps_container
  display none
.s-services__steps
  padding: 0 45px 27px;
  word-break break-word
.s-steps__item
  list-style disc
  font-family "Nunito 500", sans-serif
  font-size 17px
  margin-bottom 5px
  &:last-child
    margin-bottom 0
.s-steps__item::marker
  color #F9A422
  font-size 25px
  line-height 0.3
.t-tour
  background-color #124B9B
  border-radius 32px
  padding 30px 79px

.t-tour__title
  text-align: center;
  font-size: 34px;
  font-family: 'Nunito-Sans 900', sans-serif;
  text-transform: uppercase;
  padding-bottom: 72px;
  padding-top: 40px;
  color #fff
  span
    margin-left: 15px;
    color: #FFD500;
.t-tour__select_field
  position relative
  display flex
  align-items center
  justify-content space-between
  height 64px
  padding 20px 24px
  background-color #fff
  border-radius 45px
  font-family: 'Nunito 400', sans-serif;
  font-size 16px
  width 100%
  z-index 2
  box-shadow: 0 0 5px 0px #00000070;
  span
    color #707070
  .icon
    size(28px)
    fill #124B9B
  .icon-calendar
    size(20px)
    fill #124B9B

.t-tour__select
  position relative
  display flex
.t-tour__list_wrapper
  display none
  position absolute
  left: 0;
  right: 0;
  top: 30px;
  padding: 0 12px;


.t-tour__input
  display flex
  align-items center
  justify-content space-between
  height 64px
  padding 20px 24px
  background-color #fff
  border-radius 45px
  font-family: 'Nunito 400', sans-serif;
  font-size 16px
  border none
  width 100%

  &:placeholder
    color #4F4F4F
.t-tour__mb
  margin-bottom 32px
.t-tour__textarea
  width 100%
  border-radius 24px
  padding 20px 24px
  font-family: 'Nunito 400', sans-serif;
  font-size 16px
  outline none
.t-tour__button
  display flex
  justify-content center
  align-items center
  background-color #FFD500
  border-radius 100px
  height 64px
  font-family: 'Nunito 800', sans-serif;
  font-size 18px
  color #124B9B
  border none
  margin 0 auto
  width 258px
  margin-bottom 22px
.t-tour__notification
  text-align center
  font-family: 'Nunito 500', sans-serif;
  font-size 17px
  color #fff
  margin-bottom 20px
.t-tour__list
  background-color #fff
  border-radius: 0 0 24px 24px
  padding-top: 35px
  overflow-y scroll
  box-shadow: 0px 5px 10px -2px #00000038;
  max-height: 248px;
  &::-webkit-scrollbar
    width 0
.t-tour__item
  font-family: 'Nunito 500', sans-serif;
  font-size 15px
  padding: 15px 20px
  border-bottom 1px solid #ccc
  cursor pointer
  &:last-child
    border-bottom none
.t-tour__data
  display flex
  align-items center
  padding-left 25px
  position absolute
  width 100%
  height 100%
  left 0
  right 0
  top 0
  bottom 0
.t-tour__select_calendar
  justify-content end

.modal-content
  padding 30px
.popup-close
  text-align end
  background none
  border none
  margin-bottom 20px
  .icon
    size(25px)
.popup-title
  font-family 'Nunito 600',sans-serif
  font-size 30px
.popup-text-question
  font-family 'Nunito 400',sans-serif
  font-size 16px
  text-align center
  margin-bottom 30px
